<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="text" parent="Widget.AppCompat.TextView">
    <item name="android:fontFamily">@font/sfp_pro_display_medium</item>
    <item name="android:textColor">@color/text_color</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="head" parent="text">
    <item name="android:textSize">18sp</item>
  </style>

  <style name="subhead" parent="text">
    <item name="android:fontFamily">@font/sfp_pro_displat_regular</item>
    <item name="android:textColor">@color/subtext_color</item>
  </style>

  <style name="title" parent="text">
    <item name="android:layout_marginStart">16dp</item>
    <item name="android:layout_marginTop">12dp</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="icon_btn">
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:layout_marginEnd">8dp</item>
    <item name="android:layout_width">40dp</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:foreground">?android:attr/selectableItemBackground</item>
  </style>

  <color name="subtext_color">#80000000</color>
</resources>